[alias]
  graph = log --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --decorate
  chk = checkout
  st = status
  ls = log --oneline
  stat = log --graph --author='silesky' --oneline
  dirdiff = difftool --tool=meld --dir-diff
[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true
[user]
  name = Seth Silesky
  email = seth.silesky@gmail.com
[core]
  excludesfile = /Users/me/.gitignore_global
  autocrlf = input
  editor = vim
  pager = less -F -X
[color]
  branch = auto
  status = auto
  ui = auto
[diff]
  tool = "vscode" # default tool for 'git difftool'
[difftool]
  prompt = false # prevent Launch 'vscode' [y/n]? on git diff
[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE # boilerplate copied from vscode website
[difftool "meld"] #git difftool --tool=meld
  cmd = open -W -a Meld --args \"$LOCAL\" \"$PWD/$REMOTE\"
  trustExitCode = true # not sure what this does, but it's in the docs
[merge] # default tool for 'git mergetool'
  tool = meld
[mergetool "meld"]
  trustExitCode = true
  cmd = open -W -a Meld --args --auto-merge \"$PWD/$LOCAL\" \"$PWD/$BASE\" \"$PWD/$REMOTE\" --output=\"$PWD/$MERGED\" # in the docs https://yousseb.github.io/meld/
  keepBackup = false
[push]
  default = upstream
[rebase]
  autosquash = true
[log]
  decorate = full
[difftool "sourcetree"]
  cmd = opendiff \"$LOCAL\" \"$REMOTE\"
  path =
[mergetool "sourcetree"]
  cmd = /private/var/folders/k6/9xg_zvd547b_1k5l4d3nl1yw0000gn/T/AppTranslocation/982B7CE3-2E2A-4988-A5CB-810B544A50F2/d/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
  trustExitCode = true
