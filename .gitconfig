[alias]
  graph = log --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --decorate
  chk = checkout
  st = status
  ls = log --oneline
  stat = log --graph --author='silesky' --oneline
  dirdiff = difftool --tool=meld --dir-diff
[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true
[user]
  name = Seth Silesky
  email = seth.silesky@gmail.com
[core]
  excludesfile = /Users/me/.gitignore_global
  autocrlf = input
  editor = vim
  pager = less -F -X
[color]
  branch = auto
  status = auto
  ui = auto
[diff]
  tool = "sourcetree" # default tool for 'git difftool'
[merge] # default tool for 'git mergetool'
  tool = "bc"
  # conflictstyle = diff3
[difftool]
 # prompt = false #global
[difftool "bc"]
  trustExitCode = true # not sure what this does, but it's in the docs
  cmd = "/usr/local/bin/bcomp" \"$LOCAL\" \"$REMOTE\"
[mergetool "meld"]
  trustExitCode = true
  cmd = open -W -a Meld --args --auto-merge \"$PWD/$LOCAL\" \"$PWD/$BASE\" \"$PWD/$REMOTE\" --output=\"$PWD/$MERGED\" # in the docs https://yousseb.github.io/meld/
  keepBackup = false
[push]
  default = upstream
[rebase]
  autosquash = true
[log]
  decorate = full
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[commit]
  template = /Users/me/.stCommitMsg
