{
  extends: [
    'airbnb',
    'plugin:flowtype/recommended',
  ],
  parser: 'babel-eslint',
  plugins: [
    'flowtype',
  ],
  env: {
    browser: true,
    node: true,
    jest: true,
    mocha: true,
    jasmine: true,
    jquery: true,
  },
  rules: {
    semi: 1, // 1 means warning, not error
    no-trailing-spaces: 0, // eslint takes care of this automatically
    arrow-body-style: 0,
    no-confusing-arrow: 0,
    no-mixed-operators: 0,
    arrow-parens: 0,
    no-unused-vars: 1,
    import/prefer-default-export: 0,
    react/prefer-stateless-function: 0, // sometimes I don't want a statless fn
    react/jsx-filename-extension: [1, {extensions: ['.js', '.jsx']}],
    react/prop-types: 0,
    import/no-extraneous-dependencies: 0, // shared error
    import/no-unresolved: 0, // shared error
    import/extensions: 0, // shared error
    import/arrow-body-style: 0,
  },
  globals: {
    Drupal: false,
    __CLIENT__: false,
    __SERVER__: false,
    __DEVELOPMENT__: false,
    __PRODUCTION__: false,
  }
}
