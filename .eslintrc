{
  "plugins": [
    "react",
    "mocha",
    "standard",
  ],
  "extends": [
    "standard",
    // "eslint:recommended",
    "plugin:react/recommended", //paired with plugins: ["react"]
  ],
  "parser": "babel-eslint", // without parser specified, I just get import is not defined
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true,
      "classes": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "mocha": true,
    "node": true,
    "es6": true,
    "browser": true
  },
  "rules": {
    "mocha/no-exclusive-tests": 1,
    "no-debugger": 1,
    "no-console": 1,
    "no-case-declarations": 0,
    "no-var": 1,
    "no-unused-vars": 1,
    "react/jsx-no-duplicate-props": 1,
    "react/prop-types": 0,
    "react/no-find-dom-node": 1,
    "react/react-in-jsx-scope": 2,

  }
}

